{
  "name": "karma-allure2-reporter",
  "version": "3.0.8-beta.5",
  "description": "A Karma reporter for generating Allure 2 test results.",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/LucasRakotomalala/karma-allure2-reporter.git"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "babel src --out-dir dist/esm --extensions \".ts\" --env-name esm",
    "build:cjs": "babel src --out-dir dist/cjs --extensions \".ts\" --env-name cjs",
    "build:types": "tsc",
    "test": "npm run test:unit",
    "test:unit": "jest"
  },
  "keywords": [
    "karma-plugin",
    "karma-reporter",
    "allure",
    "allure2"
  ],
  "author": "Lucas Rakotomalala",
  "license": "MIT",
  "dependencies": {
    "allure-js-commons": "3.0.8"
  },
  "peerDependencies": {
    "karma": ">=6.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.26.4",
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@types/jest": "^29.5.14",
    "babel-plugin-add-module-exports": "1.0.4",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=14.13.0"
  }
}
